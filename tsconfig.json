{ "buildOnSave": false,
  "compileOnSave": false,
  "compilerOptions":
  {
    "types": ["mocha", "chai", "sinon"],
    "allowJs": false,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "newLine": "LF",
    "jsx": "preserve",
    "target": "es5",
    "pretty": true,
    "removeComments": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "suppressImplicitAnyIndexErrors": false,
    "inlineSources": true,
    "inlineSourceMap": true,
    "noEmitHelpers": true
  },
  "exclude": [
    "build",
    "dist",
    "node_modules"
  ]
}
